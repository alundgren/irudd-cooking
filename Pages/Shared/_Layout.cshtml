@using Microsoft.Extensions.Hosting;
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env;
@{
    //Always reload when developing to prevent css being cached but use a fixed token for prod so we can choose when to refresh
    ViewData["CssToken"] = env.IsDevelopment() ? $"t-{new Random().Next()}" : "202009062";
}
<!DOCTYPE html>
<html lang="sv">

<head>
  <!-- Basic meta info
  ==================== -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"]</title>

  <!-- Favicon
  ============ -->
  <link rel="apple-touch-icon" sizes="57x57" href="~/images/favicon/apple-icon-57x57.png" />
  <link rel="apple-touch-icon" sizes="60x60" href="~/images/favicon/apple-icon-60x60.png" />
  <link rel="apple-touch-icon" sizes="72x72" href="~/images/favicon/apple-icon-72x72.png" />
  <link rel="apple-touch-icon" sizes="76x76" href="~/images/favicon/apple-icon-76x76.png" />
  <link rel="apple-touch-icon" sizes="114x114" href="~/images/favicon/apple-icon-114x114.png" />
  <link rel="apple-touch-icon" sizes="120x120" href="~/images/favicon/apple-icon-120x120.png" />
  <link rel="apple-touch-icon" sizes="144x144" href="~/images/favicon/apple-icon-144x144.png" />
  <link rel="apple-touch-icon" sizes="152x152" href="~/images/favicon/apple-icon-152x152.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon/apple-icon-180x180.png" />
  <link rel="icon" type="image/png" sizes="192x192" href="~/images/favicon/android-icon-192x192.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon/favicon-16x16.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="96x96" href="~/images/favicon/favicon-96x96.png" />

  <!-- CSS files
  ============== -->
  <link rel="stylesheet" type="text/css" href="~/css/reset.css" />
  <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />  
  <link rel="stylesheet" type="text/css" href="~/css/fontawsome-5.14.0.all.min.css"  />
  <link rel="stylesheet" type="text/css" href="~/css/animate.min.css" />
  <link rel="stylesheet" type="text/css" href="~/css/styles.css?v=@ViewData["CssToken"]" />
</head>

<body>
  <div id="splash"></div>

  <section id="logo">
    <div class="container wow pulse">
        <div style="float:left;padding-right:15px">
            <a href="/"> <img src="~/images/logo-white.svg" alt="logo" /></a>
        </div>
        <div style="float:left">
            <h1>Recept</h1>
        </div>        
        <div style="float:right">
            @RenderSection("nav", false)
        </div>
    </div>
  </section>

  @RenderBody() 

  <!-- Website Footer
  =================== -->
  <footer>
    <div class="container">
      <div class="row">
        <!-- Author -->
        <div class="col-md-6 col-sm-12 text-center">
          <div class="footer-author">
            <a href="https://github.com/alundgren/irudd-cooking">
              <img src="~/images/icon-github.svg"  alt="Github">
            </a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- JavaScript files
  ===================== -->

  <!-- Modernizr file
  =================== -->
  <script charset="utf-8" type="text/javascript "src="~/js/modernizr.custom.js"></script>
  <script charset="utf-8" src="~/js/jquery-3.3.1.min.js"></script>
  <script charset="utf-8" src="~/js/bootstrap.min.js"></script>
  <script charset="utf-8" src="~/js/wow.min.js"></script>
  <script charset="utf-8" src="~/js/scripts.js"></script>
  @RenderSection("Scripts", required: false)
</body>

</html>